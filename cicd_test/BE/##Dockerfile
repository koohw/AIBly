FROM openjdk:17-jdk-slim

WORKDIR /app

# 환경 변수 설정
ENV SPRING_PROFILES_ACTIVE=prod

# Gradle 래퍼와 빌드 파일 복사
COPY gradlew .
COPY gradle gradle
COPY build.gradle .
COPY settings.gradle .

# 소스 코드 복사
COPY src src

# Gradle 래퍼 실행 권한 설정
RUN chmod +x ./gradlew

# 애플리케이션 빌드
RUN ./gradlew clean bootJar --no-daemon

# JAR 파일을 실행
ENTRYPOINT ["java", "-jar", "/app/build/libs/s3_test-0.0.1-SNAPSHOT.jar"]

# 컨테이너 포트 설정
EXPOSE 8001 